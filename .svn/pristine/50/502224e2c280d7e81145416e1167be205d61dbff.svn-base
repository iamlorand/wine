<form action="{SITE_URL}/admin/article/update/id/{ARTICLE_ID}" method="post">
	<input type="hidden" name="userToken" value="{USERTOKEN}">
	<div class="box-shadow" style="width: 500px">
		<div class="box_header">Update Article</div>
		<ul class="form">
			<li class="clearfix"><label>Title<span class="required">*</span></label>
				<input type="text" name="title" value="{ARTICLE_TITLE}"></li>
				
			<li class="clearfix"><label>Content<span
					class="required">*</span></label> <textarea rows="4" cols="50"
					name="content">{ARTICLE_CONTENT}</textarea></li>
			<br/>
			<select id="isActive" name="isActive">
				   <option value="1">Activate</option>
				   <option value="0">Hide</option>
			</select>	
			<li class="clearfix"><label>&nbsp;</label> <input type="submit"
				class="button" value="update"></li>
		</ul>
	</div>
</form>