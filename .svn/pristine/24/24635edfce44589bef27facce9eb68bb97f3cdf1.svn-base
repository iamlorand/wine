<form action="{SITE_URL}/admin/survey/add" method="post" >
<div class="box-shadow" style="width: 500px">
		<div class="box_header">
			Add New Survey
		</div>
		<ul class="form">
			<li class="clearfix">
				<label>Survey Name<span class="required">*</span></label>
				<input type="text" name="name">
			</li>
			<li class="clearfix">
				<label>&nbsp;</label>
				<input type="submit" class="button" value="add">
			</li>
		</ul>
	</div>
</form>